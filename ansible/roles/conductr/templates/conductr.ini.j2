# Generally the default for production server usage...
-J-server

# Memory settings
-J-Xms210m
-J-Xmx256m

# Enable debug logs
-Dakka.loglevel=info
-Dconductr.service-locator-server.external-service-addresses.elastic-search.0=http://127.0.0.1:514

# Conductr IP to listen on
-Dconductr.ip={{ ansible_default_ipv4.address }}

{% if 'seeds' not in group_names %}
--seed {{ hostvars[groups['seeds'][0]].networkInterfaces[0].networkIP }}:9004
{% endif %}

{% if env != 'production' %}
--seed-node-file-disabled
{% endif %}